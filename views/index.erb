
<% if logged_in? %>
    <img src="<%= current_user.avatar_url %>">
    <span><%= current_user.name %> (<%= current_user.username %>)</span>
    <a href='/logout'>Log Out</a>
<% else %>
    <a href='/auth/github'>Sign in with GitHub</a>
<% end %>

<ul>
<% @repositories.each do |repo| %>
    <li>
        <a href="/<%= repo.name %>"><%= repo.name %> - <%= repo.url %></a>
    </li>
<% end %>
</ul>

<% if @errors %>
    <div class="errors">
        <% @errors.messages.each do |field, messages| %>
            <% messages.each do |message| %>
                <%= field.to_s %> <%= message %>
            <% end %>
        <% end %>
    </div>
<% end %>

<% if logged_in? %>
    <form action="/repositories" method="post">
        Url: <input type="text" name="url" value="<%= params[:url] %>" />
        <input type="submit" value="Add" />
    </form>
<% end %>